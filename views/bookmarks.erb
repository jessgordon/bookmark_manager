<div>
  <h1>Add a new bookmark</h1>
  <form action='/add-bookmark' method='POST'>
    <input type="text" name="new_bookmark" placeholder="url" />
    <input type="submit" value="Submit" />
  </form>
</div>
<div>
  <h1>Bookmarks</h1>
  <ul>
    <% @bookmark_1.each do |bookmark| %>
      <li><%= bookmark %></li>
    <% end %>
  </ul>
</div>