<div>
  <h1>Add a new bookmark</h1>
  <form action='/add-bookmark' method='POST'>
    <input type="text" name="title" placeholder="title" />
    <input type="text" name="url" placeholder="url" />
    <input type="submit" value="Submit" />
  </form>
</div>
<div>
  <h1>Bookmarks</h1>
  <ul>
    <% @bookmark_1.each do |bookmark| %>
        <li class="bookmark" id="bookmark-<%= bookmark.id %>">
        <a href="<%= bookmark.url %>">
          <%= bookmark.title %>
        </a>
        <form action='/delete-bookmark' method='POST'>
          <input type="hidden" name="id" value="<%=bookmark.id %>"/>
          <input type="submit" value="delete"/>
        </form>
        <form action='/bookmarks/<%= bookmark.id %>/update' method='GET'>
          <input type="submit" value="update" />
        </form>
    <% end %>
  </ul>
</div>